@model Autoservisas.Models.Part

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Detalės likučio papildymas</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PartID)

    <div class="form-group">
        @Html.Label("Įveskite norima kiekį", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model=>model.Ammount,"0", new { htmlAttributes = new { @class = "form-control", @min = "1" } })
            @Html.ValidationMessageFor(model => model.Ammount, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Užsakyti" class="btn btn-default" onclick = "return confirm('Ar jūs tikrai norite užsakyti detales?');" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Atgal į sąrašą", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
