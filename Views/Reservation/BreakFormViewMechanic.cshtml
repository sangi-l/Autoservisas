@model Autoservisas.Models.Reservation

@{ ViewBag.Title = "Pildyti gedimo formą"; }

<h2>Meeistrų pasirinkimas</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Mechanic, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => Model.Mechanic, new SelectList(Model.Mechanic, "Text"), htmlAttributes: new { @class = "form-control", id = "marke" })
                @Html.ValidationMessageFor(x => x.Mechanic, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}