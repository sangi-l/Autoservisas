@model Autoservisas.Models.Work

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Automatinio parinkimo parinktys</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ReservationID)

    <div class="form-group">
        @Html.LabelFor(model => model.OriginalParts, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="control-label col-md-2"></div>
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.OriginalParts)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.QualityParts, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.QualityParts)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AvgPrice, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.AvgPrice)
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Išsaugoti" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Atgal į sąrašą", "Index", "Work")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

